<core:FragmentDefinition 
            xmlns="sap.m" 
            xmlns:core="sap.ui.core"
            >
            <Dialog id="helloDialog" title="Hello {/recipient/name}">
                <content>
                    <core:Icon  id="_IDGenIconDialog" 
                                src="sap-icon://database"
                                size="8rem" />
                </content>
                <beginButton>
                    <Button id="_IDGenButtonHelloDialog" text="{i18n>dialogCloseBut}" press=".onCloseDialog"></Button>
                </beginButton>
            </Dialog>
</core:FragmentDefinition>
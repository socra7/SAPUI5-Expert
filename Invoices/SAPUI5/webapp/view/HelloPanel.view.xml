<mvc:View   controllerName="logaligroup.SAPUI5.controller.HelloPanel"  
            xmlns="sap.m" 
            xmlns:mvc="sap.ui.core.mvc"
            xmlns:core="sap.ui.core"
            displayBlock="true">

            <Panel id="_IDGenPanel1" 
                    headerText="{i18n>helloPanel}" 
                    class="sapUiResponsiveMargin"
                    width="auto">
                        <content>
                        <Button id="_IDGenButton1" 
                                    text="{i18n>helloDialogBut}" 
                                    press=".onOpenDialog"
                                    class="sapUiSmallMarginEnd"/>
                            <Button id="_IDGenButton2" 
                                    text="{i18n>showHelloButtonText}" 
                                    press=".onShowHello"
                                    class="sapUiSmallMarginEnd"/>
                            <Input 
                                    id="_IDGenInput1" 
                                    value="{/recipient/name}"
                                    width="60%"
                                    valueLiveUpdate="true"/>
                            <Text   id="_IDGenText1" 
                                    text="Hello {/recipient/name}"
                                    class="sapUiSmallMargin boldElements sapthemeHighlight-asColor"/>
                        </content>
            </Panel>

            <core:Fragment fragmentName="logaligroup.SAPUI5.view.Form01" type="XML" />
           

</mvc:View>
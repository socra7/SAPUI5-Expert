<mvc:View controllerName="logaligroup.employees.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <IconTabBar>
                            <items>

                                <IconTabFilter text="{i18n>objectList}">
                                    <List items="{/Products}">
                                        <items>
                                            <ObjectListItem title="{title} {type}" number="{price}" numberUnit="EUR" type="Detail">
                                                <ObjectAttribute text="{description}"/>
                                                <ObjectAttribute text="{rating}"/>
                                            </ObjectListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter text="{i18n>standardList}"></IconTabFilter>

                                <IconTabFilter text="{i18n>inputList}"></IconTabFilter>

                                <IconTabFilter text="{i18n>notificationList}"></IconTabFilter>

                                <IconTabFilter text="{i18n>customList}"></IconTabFilter>

                            </items>
                        </IconTabBar>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>

<mvc:View controllerName="logaligroup.employees.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox id="_IDGenHBox1">
                            <Label id="labelEmployee" text="{i18n>labelEmployee}" labelFor="inputEmployee" design="Bold" class="sapUiSmallMargin"/>
                            <Input id="inputEmployee" class="sapUiSmallMarginEnd" maxLength="6" width="200px" liveChange="onValidate"/>
                            <Label id="labelCountry" text="{i18n>labelCountry}" labelFor="inputCountry" class="sapUiSmallMargin" visible="false"/>
                            <Select id="slCountry" forceSelection="false" visible="false">
                                <items>
                                    <core:Item id="_IDGenItem1" key="US" text="{i18n>countryUS}"/>
                                    <core:Item id="_IDGenItem2" key="UK" text="{i18n>countryUK}"/>
                                    <core:Item id="_IDGenItem3" key="ES" text="{i18n>countryES}"/>
                                </items>

                            </Select>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>

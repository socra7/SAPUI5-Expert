<mvc:View controllerName="logaligroup.employees.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <IconTabBar>
                            <items>

                                <IconTabFilter text="{i18n>objectList}">
                                    <List items="{
                                            
                                                                                    path : '/Products',
                                                                                    filters : [{
                                                                                        path : 'type',
                                                                                        operator : 'EQ',
                                                                                        value1 : 'vegetable'
                                                                                    }]
                                                                                }">
                                        <items>
                                            <ObjectListItem title="{title} {type}" number="{price}" numberUnit="EUR" type="Detail">
                                                <ObjectAttribute text="{description}"/>
                                                <ObjectAttribute text="{rating}"/>
                                            </ObjectListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter text="{i18n>standardList}">
                                    <Select selectedKey="{/typeSelection}">
                                        <items>
                                            <core:Item key="None" text="{i18n>none}"/>
                                            <core:Item key="MultiSelect" text="{i18n>multiSelect}"/>
                                            <core:Item key="SingleSelect" text="{i18n>selectSingle}"/>
                                            <core:Item key="SingleSelectLeft" text="{i18n>singleSelectLeft}"/>
                                            <core:Item key="SingleSelectMaster" text="{i18n>singleSelectMaster}"/>
                                        </items>
                                    </Select>

                                    <Button text="{i18n>showSelectedItems}" press="onShowSelectedRows" class="sapUiSmallMarginBegin"></Button>
                                    <Button text="{i18n>deleteSelectedItems}" press="onDeleteSelectedRows" class="sapUiSmallMarginBegin"></Button>

                                    <List id="standardList" items="{
                                                                                    path: '/Products',
                                                                                    sorter: {
                                                                                        path : 'type',
                                                                                        descending : false,
                                                                                        group : true
                                                                                    },
                                                                                    groupHeaderFactory : '.getGroupHeader'
                                                                                    }" mode="{/typeSelection}">
                                        <items>
                                            <StandardListItem title="{title} {type}" description="{description}" info="{price} {rating}" type="Active"></StandardListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter text="{i18n>inputList}">
                                    <List items="{/Products}" mode="Delete" delete="onDeleteRow">
                                        <items>
                                            <InputListItem label="{title}">
                                                <Select items="{Properties}">
                                                    <core:Item key="{Id}" text="{Text}"></core:Item>
                                                </Select>
                                            </InputListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter text="{i18n>notificationList}">
                                    <List items="{/News}">
                                        <items>
                                            <NotificationListItem title="{Title}" description="{Description}" showCloseButton="{ShowCloseButton}" priority="{Priority}" authorName="{Author}"/>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter text="{i18n>customList}">
                                    <List items="{/News}">
                                        <items>
                                            <CustomListItem>
                                                <layout:Grid defaultSpan="XL3 L3 M6 S12">
                                                    <Text text="{Title}"/>
                                                    <Text text="{Author}"/>
                                                    <Text text="{Description}"/>
                                                </layout:Grid>
                                            </CustomListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                            </items>
                        </IconTabBar>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
